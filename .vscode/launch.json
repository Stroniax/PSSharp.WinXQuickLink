    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell Core",
            "type": "coreclr",
            "request": "launch",
            "program": "pwsh",
            "args": [
                "-NoExit",
                "-NoProfile",
                "-Command",
                "Import-Module '${workspaceFolder}/build/PSSharp.WinXQuickLink'"
            ],
            "preLaunchTask": "build",
            "console": "externalTerminal",
            "cwd": "${workspaceFolder}",
        },
